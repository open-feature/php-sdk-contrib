{
    "name": "open-feature/flipt-provider",
    "description": "The flipt.io provider package for open-feature",
    "keywords": [
        "flipt",
        "open-feature",
        "feature flags"
    ],
    "homepage": "https://github.com/legoheld/flipt-provider",
    "require": {
        "php": ">=8.0",
        "open-feature/sdk": "^2.0",
        "flipt-io/flipt": "^0.2.0",
        "psr/simple-cache": "^3.0.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpunit/php-code-coverage": "^10",
        "phpunit/phpunit": "^10.4"
    },
    "autoload": {
        "psr-4": {
            "OpenFeature\\Providers\\Flipt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenFeature\\Providers\\Flagd\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
